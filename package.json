{
  "name": "twitch-drops-automation",
  "version": "1.0.0",
  "description": "Fully automatic Twitch drops system with raid handling and campaign management",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron ."
  },
  "keywords": ["twitch", "drops", "automation", "electron"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0",
    "electron-store": "^8.1.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "concurrently": "^8.2.0"
  }
}
