{
  "name": "twitch-drops-automation",
  "version": "1.0.0",
  "description": "Fully automatic Twitch drops system with raid handling and campaign management",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run watch:main\" \"npm run dev:renderer\" \"npm run start:electron\"",
    "dev:simple": "npm run build:main && electron .",
    "dev:renderer": "vite",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "start:electron": "wait-on dist/main/main/index.js && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild",
    "prestart": "npm run build:main",
    "start": "electron ."
  },
  "keywords": ["twitch", "drops", "automation", "electron"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0",
    "electron-store": "^8.1.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  }
}
